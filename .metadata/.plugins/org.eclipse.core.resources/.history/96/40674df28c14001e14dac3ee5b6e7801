  <!--  설정, 등록 xml에서 설정한다는 건 언제 어디서든 부를 수 있다.(유사 싱글톤) -->
 
  <servlet>
 	<servlet-name>Hello</servlet-name>
 	<servlet-class>sample01.HelloServlet</servlet-class>
  </servlet>
 
  <servlet-mapping>
  	<servlet-name>Hello</servlet-name>
  	<url-pattern>Hello</url-pattern>
  </servlet-mapping>
  </web-app>